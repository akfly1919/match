.dis-wrapper{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

textarea{
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.15);
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  border-radius: 6rpx;
}
.dis-box{
  margin-top: 30rpx;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
input{
  border: 1px solid rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  font-size: 26rpx;
  height: 60rpx;
  padding: 0 10rpx;
  border-radius: 6rpx;
}
.push-btn{
  width: 90%;
  background-color:#FFB6C1; 
  color: #fff;
  text-align: center;
  line-height: 2.4;
  font-size: 28rpx;
  border-radius: 60rpx;
  margin: 60rpx auto 100rpx auto;
}
.push-btn:active{
  /* background-color:#cee1c1;  */
  opacity: 0.9;
}
.dis-area{
  margin-top: 100rpx;
}

.container {
  overflow: hidden;
}
.about-title {
  margin: 10rpx 0;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  color: #333;
}
.little-title{
  margin: 10rpx 0;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333;
}
.about-inf {
  padding: 30rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 48rpx;
  text-indent: 60rpx;
  text-align: justify;
  font-size: 24rpx;
  text-justify: inter-word;
  letter-spacing: 2rpx;
}
.head-box {
  margin-left: 15%;
  width: 70%;
  height: 150rpx;
}
.head-box image {
  width: 100%;
  height: 100%;
}
.eye-box {
  margin-top: -20rpx;
  width: 100%;
  height: 50rpx;
}
.eye-box image {
  width: 100%;
  height: 100%;
}
.inf-box {
  margin-left: 4%;
  margin-top: -16rpx;
  width: 92%;
  background-color: white;
  box-shadow: 8rpx 8rpx 8rpx #cbcbcb;
}

.dis-img-items {
  display: flex;
  margin-top: 30rpx;
}

.img-item {
  width: 130rpx;
  height: 130rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  margin-right: 20rpx;
}

.img-item image {
  width: 130rpx;
  height: 130rpx;
}

.item-pmt {
  font-size: 26rpx;
  padding-top: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}

.img-btn:after {
  content: '+';
  position: absolute;
  font-size: 100rpx;
  color: rgba(0, 0, 0, 0.15);
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
  line-height: 1;
}
