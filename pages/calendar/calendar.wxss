/* pages/others/calendar/calendar.wxss */
page {
  background: #f3f3f7;
}
.selected_date {
    padding: 24rpx;
    overflow: hidden;
    border-bottom: 1px solid #d6d7dc;
    color: #576b95;
  }

  .selected_date .text_center {
      font-size: 30rpx;
      text-align: center;
  }
  
  .selected_date>view {
    width: 33.3%;
    float: left;
  }
  
  .calendar_panel {
    width: 100%;
    /* height: 600rpx; */
  }

.week_box {
      width: 100%;
      height: 76rpx;
      background: #f3f3f7;
      overflow: hidden;
      display: flex;
      align-items: center;
      color: #b6b6b6;
  }
  
  .calendar_box {
    width: 100%;
    height: 152rpx;
    background: #fff;
    overflow: hidden;
    /* border-bottom: 1rpx solid #ececec; */
    display: flex;
  }
  
  .weekday_label {
    width: 14.28%;
    float: left;
    text-align: center;
    font-size: 26rpx;
    /* padding: 10rpx; */
    padding: 0 10rpx;
    box-sizing: border-box;
    border: 1px solid #f3f3f7;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .weekday_label .date {
    width: 100%;
  }
  .weekday_label .date text {
      float: right;
      font-size: 20rpx;
      color: #b6b6b6;
  }

  .gameNumBox text {
      display: block;
      color: #576b95
  }
  
  .gameNumBox text:nth-child(1) {
      font-size: 35rpx;
  }

  .gameNumBox text:nth-child(2) {
    font-size: 18rpx;
}
  
  .select_icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .active_label {
    /* color: #2b58e0; */
    border: 1px solid #2b58e0;
  }
  
  .show_box {
    padding: 20rpx;
    font-size: 26rpx;
  }
  
.backtoday {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 34rpx;
  color: #576b95;
  background: #f3f3f7;
}