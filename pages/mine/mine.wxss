.person-banner {
  width: 100%;
  height: 340rpx;
  /* background-color: #ec9796; */
  background: #3b48ee;
}

.person-avatar {
  width: 120rpx;
  margin: 0 auto;
  padding-top: 60rpx;
}

.person-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}

.person-depict {
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  padding-top: 20rpx;
  white-space: nowrap;
}

.mine-items {
  text-align: center;
  background-color: #fff;
  margin: 30rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
}

.mine-item {
  font-size: 26rpx;
  color: #4a4a4a;
  line-height: 100rpx;
  border-bottom: 2rpx solid rgba(219, 223, 227, 0.30);
  margin-bottom: 6rpx;
  background-color: #fff;
  display: flex;
  justify-content: left;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.mine-item image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10px;
}
.mine-item .arrow{
  width: 15rpx;
  height: 24rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.mine-item.phone image {
  margin-right: 18rpx;
}

.mine-item:last-child {
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

button {
  font-size: 26rpx;
  color: #fe6637;
  background-color: #fff;
  margin-left: 0;
  border: 1px solid transparent;
  width: 600rpx;
  text-align: left;
  padding: 0;
  height: 98rpx;
  line-height: 98rpx;
  outline: none;
}

button::after {
  border: none;
}

